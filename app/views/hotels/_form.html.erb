<%= simple_form_for [@trip, @place, @hotel] do |h| %>
  <%= h.input :name %>
  <%= h.input :start_time, as: :datetime, start_year: Date.today.year - 5,
    end_year: Date.today.year + 5 %>
  <%= h.input :end_time, as: :date, start_year: Date.today.year - 5,
    end_year: Date.today.year + 5 %>
  <%= h.input :cost, as: :float %>
  <%= h.button :submit %>
<% end %>
