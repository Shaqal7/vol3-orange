<% if @trips.current %>
  <% @trips.current.each do |trip| %>
    <div class="row my-4">
      <div class="col-lg-8">
        <img class="img-fluid rounded" src="http://placehold.it/900x400" alt="">
      </div>
      <div class="col-lg-4">
        <h1><%= trip.name %></h1>
        <p>
          From: <%= trip.start_date if trip.start_date %>
        </p>
        <p>
          Until: <%= trip.end_date if trip.end_date %>
        </p>
        <%= link_to 'Show trip', trip_path(trip), class: "btn btn-primary btn-lg" %>
      </div>
    </div>
  <% end %>
<% end %>
