<h1> My trips </h1>

<div class="row">
<h2>Upcoming trips</h2>
</div>
<div class="row">
  <% @upcoming_trips.each do |trip| %>
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= trip.name  %></h5>
        <p class="card-text">
          From: <%= trip.start_date if trip.start_date %>
        </p>
        <p class="card-text">
          Until: <%= trip.end_date if trip.end_date %>
        </p>
        <%= link_to 'Show trip', trip_path(trip), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
  </div>
  <% end %>
<div class="row">
  <h2>Past trips</h2>
</div>
<div class="row">
  <% @past_trips.each do |trip| %>
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= trip.name  %></h5>
        <p class="card-text">
          From: <%= trip.start_date if trip.start_date %>
        </p>
        <p class="card-text">
          Until: <%= trip.end_date if trip.end_date %>
        </p>
        <%= link_to 'Show trip', trip_path(trip), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
  <% end %>
</div>
<div class="row">
<div class="col-sm-6">
  <div class="card">
    <div class="card-body">
      <%= link_to 'Add a trip', new_trip_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
